@model Produto

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<div>
    @TempData["mensagem"]
    @TempData["nome"]
</div>

@if (ViewBag.produto != null)
{
    <div>
        @ViewData["nome"] <br />
        @ViewData["preco"] <br />
        @ViewBag.categoria <br />
        @ViewBag.produto.Nome
    </div>
    <div class="alert alert-primary">
        @Model.Nome
        @Model.Preco
        @Model.Categoria
    </div>
}
<form method="post">
    <div class="form-group">
        <label for="id-nome">Nome</label>
        <input type="text" name="nome" id="id-nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-preco">Preço</label>
        <input type="text" name="preco" id="id-preco" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-categoria">Categoria</label>
        <input type="text" name="categoria" id="id-categoria" class="form-control" />
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
</form>

