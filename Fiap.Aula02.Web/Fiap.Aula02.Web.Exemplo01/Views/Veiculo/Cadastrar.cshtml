@model Veiculo

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastro de Veículo</h1>

<div class="text-right">
    <a asp-action="index" class="btn btn-outline-dark mb-2">Veículos</a>
</div>
<table class="table">


    <form asp-action="cadastrar">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success">
                @TempData["msg"]
            </div>
        }



        <div class="form-group">
            <label asp-for="Modelo"></label>
            <input asp-for="Modelo" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Valor"></label>
            <input asp-for="Valor" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Ano"></label>
            <input asp-for="Ano" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="Automatico" />
            <label asp-for="Automatico"></label>
        </div>
        <div class="form-group">
            <label asp-for="Combustivel" ></label>
            <select asp-for="Combustivel" class="form-control"
                    asp-items="@Html.GetEnumSelectList<Combustivel>()">
                <option>Selecione</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Cor"></label>
            <select asp-for="Cor" class="form-control" asp-items="@ViewBag.cores">
                <option>Selecione</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="DataCompra"></label>
            <input asp-for="DataCompra" class="form-control" />
        </div>
        <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
    </form>
